<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubClone" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomNavStyle" parent="Widget.Design.BottomNavigationView">
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="ButtonBlack" parent="Widget.MaterialComponents.Button">
        <item name="colorAccent">@color/black</item>
    </style>
</resources>